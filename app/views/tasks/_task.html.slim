div id="js-task-#{task.id}" class='task-wrapper mb-1'
  div id="js-task-flash-#{task.id}" class='mb-2' style='height: 30px'
  .task-border.border-bottom.border-secondary.pb-2
    div id="js-taskTitle-#{task.id}" class='mt-2'
      = task.title

    div id="js-tweetTiming-#{task.id}" class='mt-2'
      - if task.repeat?
        div id="js-repeatTiming-#{task.id}"
          = render 'tasks/repeat_timing', task: task

    - if task.todo? && task.active?
      div id="js-nextTweetDatetime-#{task.id}" class='mt-2'
        = render 'tasks/next_tweet_datetime', task: task

    div id='js-finish-task-#{task.id}' class='d-inline-block mt-2'
      = render 'tasks/finish_btn', task: task

    div id="js-more-info-#{task.id}" class='mt-3'
      = render 'tasks/more_info_task', task: task

